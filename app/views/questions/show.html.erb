<div class="go-up"><i class="icon-chevron-up"></i></div>


  <div class="row">
    <div class="col-md-8">
      <section class="col-md-1">
      </section>

      <section class="question-content col-md-11">
        <p><%= @question.body %></p>

        <% @question.tags.each do |tag| %>
        <% end %>
      </section>

      <section class="comments-question">
        <% @question.comments.each do |comment| %>
          <p><%= comment.body %></p>
          <p><%= link_to comment.user.name, comment.user %></p>
        <% end %>
      </section>

      <section class="answers-content">
        <% @question.answers.each do |answer| %>
          <article class="answer-component" id="answer-#{answer.id}">
            <%= answer.body %>
          </article>

          <section id="answer-comment=#{answer.id}">
            <% answer.comments.each do |comment| %>
              <p><%= comment.body %></p>
              <p><%= link_to comment.user.name, comment.user %></p>
            <% end %>
          </section>
        <% end %>
      </section>

      <section class="new-answer-content">
        <%= form_for(@new_answer, url: create_answer_question_path(@question), method: :post, html: { class: "form-horizontal" }) do |f| %>
          <div class="form-group">

            <div class="col-lg-12">
              <div class="row">
                <div class="col-md-10">
                  <%= f.text_area :body, class: "form-control", placeholder: "Responda a pergunta..." %>
                </div>

                <div class="col-md-2">
                  <%= f.submit "Responder", class: "btn btn-success" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </section>

    </div>

    <div class="col-md-4">
      <%= render "shared/sidebar" %>
    </div>
  </div>

