<div class="row">

  <div class="col-md-8">
    <% @questions.each do |question| %>
      <section class="question">
        <h3>
          <%= link_to question.title, question %>
          <span class="label label-info"><%= time_ago_in_words question.created_at %></span>

        </h3>
        <p>
          <%= question.body %></h3>
        </p>
      </section>
    <% end %>
  </div>

  <div class="col-md-4">
    <br/>
    <br/>

    <%= render "shared/sidebar" %>
  </div>

</div>
