<div class="section-warp ask-me">
		<div class="container clearfix">
			<div class="box_icon box_warp box_no_border box_no_background" box_border="transparent" box_background="transparent" box_color="#FFF">
				<div class="row">
					<div class="col-md-12" style="padding-top: 0px">
						<h2 id="home-title">Hall da fama</h2>
						<p id="home-caller">Estes são os alunos que  mais respondem dúvidas no Vestibuleiro.</p>
						<div class="clearfix"></div>
					</div>
				</div><!-- End row -->
			</div><!-- End box_icon -->
		</div><!-- End container -->
	</div><!-- End section-warp -->

	<section class="container main-content">
		<div class="row">
			<div class="col-md-12">

				<div class="tabs-warp question-tab">
		            <ul class="tabs">
		                <li class="tab"><a href="#" class="current">Professor</a></li>
		                <li class="tab"><a href="#">Aluno</a>
		                <!--<li class="tab"><a href="#">Inglês</a></li>
		                <li class="tab"><a href="#">Português</a></li>
		                <li class="tab"><a href="#">Redação</a></li>
		                <li class="tab"><a href="#">Matemática</a></li>
		                <li class="tab"><a href="#">Química</a></li>
		                <li class="tab"><a href="#">Geografia</a></li>
		                <li class="tab"><a href="#">História</a></li>-->
		            </ul>

			       <div class="tab-inner-warp">
						<div class="tab-inner">
							<% @teachers.each_with_index  do |teacher, index| %>
									<article class="question question-type-normal">
										<div class="row">
										<div class="col-md-1">
											<div class="question-author ranking">
												<a href="#" original-title="ahmed" class="question-author-img tooltip-n"><span></span><img alt="" src="http://placehold.it/60x60/FFF/444"></a>
											</div>
											<h4 class="ranking-points"> <%= teacher.ranking_user %> </h4>
											<span style="text-align: center; display: block">pontos</span>
										</div>
										<div class="col-md-11">
										<h2 style="margin-bottom: 0px; margin-left: 0px;">
											<%= index + 1 %>. <%= link_to teacher.name, teacher %>
										</h2>
										<div class="question-inner" style=" margin-left: 0px;">
											<div class="clearfix"></div>
											<p class="question-desc" style="padding-bottom: 20px;"> <%= teacher.description %> </p>
											<div class="question-details">
												<!--<span class="question-answered question-answered-done"><i class="icon-ok"></i>87 melhores respostas</span> -->
												<span class="question-favorite">
													<i class="icon-thumbs-up"></i>
													<%= teacher.total_upvotes %> upvotes
												</span>
											</div>
											<!-- <span class="question-category"><a href="#"><i class="icon-folder-close"></i>Mais ativo em Matemática</a></span> -->
											<span class="question-comment"><a href="#"><i class="icon-comment"></i> <%= teacher.answers.count %> respostas</a></span>
											<div class="clearfix"></div>
										</div>
										</div>
										</div>
									</article>
							<% end %>
						</div>
			      </div>
			      
				</div>
			</div><!-- End main -->
		</div><!-- End row -->
	</section><!-- End container -->
